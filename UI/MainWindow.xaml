<Window x:Class="OCRTool.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCRTool.UI"
        mc:Ignorable="d"
        Title="OCR Tool - Equipment Tag Extractor" Height="500" Width="800"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="OCR Tool - Equipment Tag Extractor" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Folder/File Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Input Folder/File -->
            <TextBox x:Name="FolderPathTextBox" Grid.Row="0" Grid.Column="0" 
                     Height="30" VerticalAlignment="Center"
                     IsReadOnly="True" Background="#F0F0F0"
                     Text="Select a folder or PDF files..."/>
            
            <Button Grid.Row="0" Grid.Column="1" Content="Browse" 
                    Width="100" Height="30" Margin="10,0,0,0"
                    Click="BrowseButton_Click"/>
            
            <!-- Output Folder -->
            <TextBox x:Name="OutputFolderTextBox" Grid.Row="1" Grid.Column="0" 
                     Height="30" VerticalAlignment="Center" Margin="0,5,0,0"
                     IsReadOnly="True" Background="#F0F0F0"
                     ToolTip="Optional: Output folder for results. If empty, will be asked during processing."
                     Text="{Binding OutputFolderText, Mode=TwoWay}"/>
            
            <Button Grid.Row="1" Grid.Column="1" Content="Output" 
                    Width="100" Height="30" Margin="10,5,0,0"
                    Click="OutputFolderButton_Click"
                    ToolTip="Select output folder (optional)"/>
        </Grid>
        
        <!-- File List -->
        <GroupBox Grid.Row="2" Header="Files to Process">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FileListItemsControl" ItemsSource="{Binding Files}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="5" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="{Binding Status}" 
                                                   HorizontalAlignment="Right" 
                                                   Foreground="{Binding StatusColor}"
                                                   VerticalAlignment="Center"/>
                                        <Button Grid.Column="2" Content="X" 
                                                Width="25" Height="25" Margin="5,0,0,0"
                                                ToolTip="Remove file from list"
                                                Click="RemoveFileButton_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Clear All button -->
                <Button Grid.Row="1" Content="Clear All Files" 
                        HorizontalAlignment="Right" Margin="0,10,0,0"
                        Click="ClearAllFilesButton_Click"
                        IsEnabled="{Binding CanProcess}"/>
            </Grid>
        </GroupBox>
        
        <!-- Progress -->
        <StackPanel Grid.Row="3" Margin="0,15,0,15">
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" 
                         Value="{Binding ProgressValue}"/>
            <TextBlock x:Name="StatusTextBlock" Text="{Binding StatusMessage}" 
                       Margin="0,5,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Process Files" Width="150" Height="40" 
                    Click="ProcessButton_Click" Margin="0,0,10,0"
                    IsEnabled="{Binding CanProcess}"/>
            <Button Content="View Config" Width="120" Height="40" 
                    Click="ConfigButton_Click" Margin="0,0,10,0"/>
            <Button Content="Open Output" Width="130" Height="40" 
                    Click="OpenOutputButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
